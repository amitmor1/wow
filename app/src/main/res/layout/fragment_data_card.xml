<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/dataCardParentLayout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginEnd="4dp"
             android:layout_marginStart="4dp"
             android:clickable="true"
             android:focusable="true"
             app:layout_constraintTop_toBottomOf="parent">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="238dp"
            android:id="@+id/buildingDataCard"
            app:layout_constraintTop_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardConstraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="parent">

            <ImageView
                android:id="@+id/dataTypeImage"
                android:layout_width="66dp"
                android:layout_height="70dp"
                android:contentDescription="@string/image_desctiption"
                app:srcCompat="@drawable/sunflower"
                android:layout_marginTop="52dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/buildingStateColor"
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:background="@color/lowRisk"
                android:contentDescription="@string/status_color"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

            <ScrollView
                    android:id="@+id/dataDescriptionContainer"
                    android:layout_width="191dp"
                    android:layout_height="132dp"
                    app:layout_constraintStart_toStartOf="@+id/buildingStateColor"
                    android:layout_marginStart="40dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/timePassed">

                <LinearLayout
                        android:id="@+id/contentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/dataSecondTitle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:lines="2"
                            android:maxLines="2"
                            android:singleLine="false"
                            android:text="@string/data__second_title"
                            android:textColor="@android:color/secondary_text_light"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/dataTypeImage"
                            app:layout_constraintTop_toBottomOf="@+id/dataType"/>
                    <TextView
                            android:id="@+id/moreContent"
                            android:layout_width="145dp"
                            android:layout_height="177dp"
                            android:text="עוד טקסטטט \n ועוד \n ועוד \n\n\n\n\n\n\n\n\n\n ועוד מלא"
                            android:textColor="@android:color/secondary_text_light"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="@+id/dataDescriptionContainer"
                            app:layout_constraintStart_toStartOf="@+id/dataDescriptionContainer"
                            app:layout_constraintTop_toBottomOf="@+id/dataDescriptionContainer"
                            tools:text="עוד טקסטטט \n ועוד \n ועוד \n\n\n\n\n\n\n\n\n ועוד מלא"
                            tools:visibility="visible"/>

                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/dataType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_type"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="22sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="44dp"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/timePassed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_passed"
                android:textColor="@android:color/secondary_text_light"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/dataType" android:layout_marginStart="40dp"
                app:layout_constraintStart_toStartOf="@+id/buildingStateColor"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/closeButton"
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:background="@drawable/cancel_material"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/readMore"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="75dp"
                android:layout_height="37dp"
                android:text="@string/readMoreHebrew"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>