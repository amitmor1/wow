<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dataCardFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context=".view.DataCardFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/buildingDataCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardConstraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/dataDescriptionContainer"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/dataType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dataType">

                <LinearLayout
                    android:id="@+id/contentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dataSecondTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:lines="2"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="@string/data__second_title"
                        android:textColor="@android:color/secondary_text_light"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/dataTypeImage"
                        app:layout_constraintTop_toBottomOf="@+id/dataType" />

                    <TextView
                        android:id="@+id/moreContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="עוד טקסטטט \n ועוד \n ועוד \n\n\n\n\n\n\n\n\n\n ועוד מלא"
                        android:textColor="@android:color/secondary_text_light"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="@+id/dataDescriptionContainer"
                        app:layout_constraintStart_toStartOf="@+id/dataDescriptionContainer"
                        app:layout_constraintTop_toBottomOf="@+id/dataDescriptionContainer"
                        tools:text="עוד טקסטטט \n ועוד \n ועוד \n\n\n\n\n\n\n\n\n ועוד מלא"
                        tools:visibility="visible" />
                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/dataType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/data_type"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@+id/dataTypeImage"
                app:layout_constraintTop_toTopOf="@+id/dataTypeImage" />

            <ImageView
                android:id="@+id/dataTypeImage"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/image_desctiption"
                app:layout_constraintEnd_toStartOf="@+id/buildingStateColor"
                app:layout_constraintTop_toTopOf="@+id/buildingStateColor"
                app:srcCompat="@drawable/sunflower" />

            <ImageView
                android:id="@+id/buildingStateColor"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/sunflowerYellow"
                android:contentDescription="@string/status_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/closeButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/cancel_material"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/buildingStateColor" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/readMore"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="75dp"
                android:layout_height="37dp"
                android:text="@string/readMoreHebrew"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/dataDescriptionContainer"
                app:layout_constraintTop_toBottomOf="@+id/dataDescriptionContainer" />

            <TextView
                android:id="@+id/timePassed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_passed"
                android:textColor="@android:color/secondary_text_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/dataDescriptionContainer"
                app:layout_constraintTop_toBottomOf="@+id/readMore" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>