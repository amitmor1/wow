<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context=".DataCardFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/BuildingDataCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/CardConstraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/DataDescriptionContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/DataType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/DataType">

                <LinearLayout
                    android:id="@+id/ContentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/DataSecondTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:lines="2"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="@string/data__second_title"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/DataTypeImage"
                        app:layout_constraintTop_toBottomOf="@+id/DataType" />

                    <TextView
                        android:id="@+id/MoreContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="עוד טקסטטט \n ועוד \n ועוד \n\n\n\n\n\n\n\n\n\n ועוד מלא"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="@+id/DataDescriptionContainer"
                        app:layout_constraintStart_toStartOf="@+id/DataDescriptionContainer"
                        app:layout_constraintTop_toBottomOf="@+id/DataDescriptionContainer"
                        tools:text="עוד טקסטטט \n ועוד \n ועוד \n\n\n\n\n\n\n\n\n ועוד מלא"
                        tools:visibility="visible" />
                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/DataType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/data_type"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@+id/DataTypeImage"
                app:layout_constraintTop_toTopOf="@+id/DataTypeImage" />

            <ImageView
                android:id="@+id/DataTypeImage"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/image_desctiption"
                app:layout_constraintEnd_toStartOf="@+id/BuildingStateColor"
                app:layout_constraintTop_toTopOf="@+id/BuildingStateColor"
                app:srcCompat="@drawable/sunflower" />

            <ImageView
                android:id="@+id/BuildingStateColor"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/sunflowerYellow"
                android:contentDescription="@string/status_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/CloseButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:background="@android:drawable/presence_offline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/BuildingStateColor" />


            <Button
                android:id="@+id/ReadMore"
                android:layout_width="75dp"
                android:layout_height="37dp"
                android:text="@string/readMoreHebrew"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/DataDescriptionContainer"
                app:layout_constraintTop_toBottomOf="@+id/DataDescriptionContainer" />

            <TextView
                android:id="@+id/TimePassed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_passed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/DataDescriptionContainer"
                app:layout_constraintTop_toBottomOf="@+id/ReadMore" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>